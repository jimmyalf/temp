	</target>  
		<!-- Publish www.synhalsan.se -->
	<target name="Public-Synhalsan" depends="Public-OgonApotek">
		<property name="deployPublic" 	value="${deployRoot}\www.synhalsan.se" overwrite="false"/>	
		<nant buildfile="${wpcCommonBuildFiles}\Wpc.Component-Public.Publish.build"/>
	</target>  
	<!-- Publish www.synologen.se -->
	<target name="Public-Se" depends="Public-Synhalsan">
		<property name="deployPublic" 	value="${deployRoot}\www.synologen.se" overwrite="false"/>
		<nant buildfile="${wpcCommonBuildFiles}\Wpc.Component-Public.Publish.build"/>
	</target>  	
	
</project>