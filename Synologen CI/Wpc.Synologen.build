<?xml version="1.0"?>
<project name="Dev Deployment" default="Public-Se">

	<property name="compName" 				value="Synologen"/>
	<property name="wpcRootDir" 			value="C:\Develop\WPC4\Current\CustomerSpecific"/>
	<property name="wpcCommonBuildFiles" 	value="C:\Inetpub\Wpc\CommonBuildFiles"/>
	<property name="developDir" 			value="${wpcRootDir}\${compName}"/>
	<property name="deployRoot" 			value="\\Black\Inetpub\Wpc\Synologen" overwrite="false"/>
	
	<!-- Source folders -->
	<property name="srcAdmin" 		value="${developDir}\${compName} Admin"/>
	<property name="srcPub" 		value="${developDir}\${compName} Site"/>
	
	<!-- Deployment folders -->
	<property name="deployAdmin" 	value="${deployRoot}\Wpc Admin" overwrite="false"/>

	<!-- Clean Admin and Public -->
	<target name="Clean">
		<nant buildfile="${wpcCommonBuildFiles}\Wpc.Component-Clean.Publish.build"/>
	</target>
  
