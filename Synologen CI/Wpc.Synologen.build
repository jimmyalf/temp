		<nant buildfile="${wpcCommonBuildFiles}\Wpc.Component-Admin.Publish.build"/>
	</target>
	
	<!-- Publish www.synologen.nu -->	
	<target name="Public-Nu" depends="Admin">
		<property name="deployPublic" 	value="${deployRoot}\www.synologen.nu" overwrite="false"/>
		<nant buildfile="${wpcCommonBuildFiles}\Wpc.Component-Public.Publish.build"/>
	</target>  
	<!-- Publish lev.synologen.nu -->
	<target name="Public-Lev" depends="Public-Nu">
		<property name="deployPublic" 	value="${deployRoot}\lev.synologen.nu" overwrite="false"/>	
		<nant buildfile="${wpcCommonBuildFiles}\Wpc.Component-Public.Publish.build"/>
	</target>  
		<!-- Publish partner.synologen.nu -->
	<target name="Public-Partner" depends="Public-Lev">
