<?xml version="1.0" encoding="utf-8" ?> 
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<appSettings />
	
	<log4net>
		<root>
			<level value="DEBUG" />
			<appender-ref ref="LogFileAppender" />
			<appender-ref ref="SmtpAppender" />
		</root>
		<logger name="NHibernate">
		  <level value="WARN" />
		</logger>

		<logger name="NHibernate.SQL">
		  <level value="DEBUG" />
		</logger>
		<appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender" >
			<param name="File" value="C:\Develop\WPC\Synologen.LensSubscription\Synologen.LensSubscription.ServiceCoordinator\log.txt" />
			<param name="AppendToFile" value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="10" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level %message%newline" />
			</layout>
		</appender>
		<appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
			<threshold value="WARN"/>
			<to value="carl.berg@spinit.se,patrik.ivarsson@spinit.se" />
			<from value="error-report@synologen.nu" />
			<subject value="Synologen Lens Subscription Coordinator Error" />
			<smtpHost value="mail.spinit.se" />
			<bufferSize value="512" />
			<lossy value="false" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level %message %newline%newline%exception %newline" />
			</layout>
		</appender>
	</log4net>
	<system.serviceModel>
		<client>
			<endpoint address="http://localhost/TestService.svc" 
					  binding="wsHttpBinding" 
					  contract="Spinit.Wpc.Synologen.Core.Domain.Services.IBGWebService" />
		</client>
	</system.serviceModel>
	<connectionStrings>
		<add name="WpcServer" connectionString="Initial Catalog=dbWpcSynologen5;Data Source=193.23.117.108;uid=sa;pwd=RICE17A;Pooling=true;Connect Timeout=15;" providerName="System.Data.SqlClient"/>
	</connectionStrings>
</configuration>
