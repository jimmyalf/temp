<?xml version="1.0" encoding="utf-8" ?> 
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<appSettings>
		<add key="PaymentDayInMonth" value="28"/>
		<add key="PaymentCutOffDayInMonth" value="15"/>
	</appSettings>
	
	<log4net>
		<root>
			<level value="DEBUG" />
			<appender-ref ref="LogFileAppender" />
			<appender-ref ref="SmtpAppender" />
		</root>
		<logger name="NHibernate">
		  <level value="WARN" />
		</logger>

		<logger name="NHibernate.SQL">
		  <level value="DEBUG" />
		</logger>
		<appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender" >
			<param name="File" value="applicationlog.txt" />
			<param name="AppendToFile" value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="10" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level %message%newline" />
			</layout>
		</appender>
		<appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
			<threshold value="WARN"/>
			<to value="carl.berg@spinit.se" />
			<from value="error-report@synologen.nu" />
			<subject value="Synologen Lens Subscription Coordinator Error" />
			<smtpHost value="mail.spinit.se" />
			<bufferSize value="512" />
			<lossy value="false" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level %message %newline%newline%exception %newline" />
			</layout>
		</appender>
	</log4net>
	<system.serviceModel>
		<bindings>
			<wsHttpBinding>
				<binding name="ServiceBinding">
					<readerQuotas maxDepth="32" maxStringContentLength="8192" maxArrayLength="16384" maxBytesPerRead="4096" maxNameTableCharCount="16384" />
					<security mode="None"/>
				</binding>
			</wsHttpBinding>
		</bindings>
		<client>
			<endpoint address="http://localhost:53546/Service.svc"
					  binding="wsHttpBinding" 
					  bindingConfiguration="ServiceBinding"
					  contract="Spinit.Wpc.Synologen.Core.Domain.Services.BgWebService.IBGWebService" />
		</client>
	</system.serviceModel>
	<connectionStrings>
		<add name="WpcServer" connectionString="Initial Catalog=dbWpcSynologen;Data Source=LIGHTCORAL;Integrated Security=SSPI;Pooling=true;Connect Timeout=15;" providerName="System.Data.SqlClient"/>
		<add name="BGServer" connectionString="Initial Catalog=dbSynologenBGC;Data Source=LIGHTCORAL;Integrated Security=SSPI;Pooling=true;Connect Timeout=15;" providerName="System.Data.SqlClient"/>
	</connectionStrings>
</configuration>


